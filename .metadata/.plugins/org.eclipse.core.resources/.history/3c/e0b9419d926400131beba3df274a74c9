package uk.ac.cam.oda22.graphics;

import java.awt.Color;
import java.awt.geom.Ellipse2D;
import java.awt.geom.Line2D;

/**
 * @author Oliver
 *
 */
public class Circle {

	public final Ellipse2D c;

	public final Color colour;

	public final float thickness;

	/**
	 * @param l
	 * @param colour
	 * @param thickness
	 */
	public Circle(Point2D position, double radius, Color colour, float thickness) {
		this.c = new Ellipse2D.Double(position.getX(), position.getY(), radius * 2, radius * 2);
		this.colour = colour;
		this.thickness = thickness;
	}

}
