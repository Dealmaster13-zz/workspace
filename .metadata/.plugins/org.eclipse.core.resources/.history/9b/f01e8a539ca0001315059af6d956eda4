package uk.ac.cam.oda22.core.environment;

import java.awt.geom.Point2D;
import java.util.ArrayList;
import java.util.List;

/**
 * @author Oliver
 *
 */
public class SimpleRoom extends Room {

	public final boolean[][] obstacleCells;
	
	public final double cellSize;
	
	public SimpleRoom(double width, double height, boolean[][] obstacleCells, double cellSize) {
		super(width, height, new ArrayList<Obstacle>());
		
		this.obstacleCells = obstacleCells;
		this.cellSize = cellSize;
	}
	
	private void generateObstacles(boolean[][] obstacleCells) {
		for (int i = 0; i < obstacleCells.length; i++) {
			for (int j = 0; j < obstacleCells[i].length; j++) {
				List<Point2D> points = new ArrayList<Point2D>();
				
				// Create an obstacle spanning from index (i, j) to index (i+1, j+1)
				
				Obstacle o = new Obstacle(points);
			}
		}
	}
	
}
