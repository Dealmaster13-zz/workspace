package uk.ac.cam.oda22.coverage;

import java.util.LinkedList;
import java.util.List;

/**
 * @author Oliver
 *
 */
public class Sweep {

	public final List<ISweepSegment> sweepSegments;

	public Sweep() {
		this.sweepSegments = new LinkedList<ISweepSegment>();
	}

	public Sweep(ISweepSegment s) {
		this.sweepSegments = new LinkedList<ISweepSegment>();
		this.sweepSegments.add(s);
	}

	public Sweep(List<ISweepSegment> sweepSegments) {
		this.sweepSegments = sweepSegments;
	}
	
	public void addSegment(ISweepSegment s) {
		this.sweepSegments.add(s);
	}
	
	public void addSegments(List<ISweepSegment> ss) {
		this.sweepSegments.addAll(ss);
	}

}
