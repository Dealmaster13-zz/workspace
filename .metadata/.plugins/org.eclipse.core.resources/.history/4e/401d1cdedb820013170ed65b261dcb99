package uk.ac.cam.oda22.core.robots;

import java.awt.geom.Line2D;
import java.awt.geom.Point2D;

import uk.ac.cam.oda22.core.MathExtended;
import uk.ac.cam.oda22.core.ShapeFunctions;
import uk.ac.cam.oda22.core.tethers.Tether;

/**
 * @author Oliver
 *
 */
public class RectangularRobot extends Robot {

	public final double width;

	public final double height;

	/**
	 * @param args
	 * @throws Exception 
	 */
	public RectangularRobot(Point2D position, double rotation, double rotationalSensitivity, Tether tether, double width, double height) throws Exception {
		super(position, MathExtended.getRadius(width, height), rotation, rotationalSensitivity, tether);

		this.width = width;
		this.height = height;

		Line2D[] arrow = ShapeFunctions.getArrow(new Point2D.Double(0, 0), rotation, 20, 5);
		Line2D[] rectangle = ShapeFunctions.getRectangle(position, width, height, rotation);

		RobotOutline outline = new RobotOutline(arrow);

		this.setOutline(outline);
	}

}
