package uk.ac.cam.oda22.graphics.shapes;

import java.awt.Color;
import java.awt.geom.Line2D;
import java.awt.geom.Point2D;
import java.awt.geom.Point2D.Double;

import uk.ac.cam.oda22.core.ShapeFunctions;

/**
 * @author Oliver
 *
 */
public class Arrow extends DisplayShape {

	private final Point2D position;
	
	public final Line2D[] ls;

	public Arrow(Point2D position, double length, double headLength, Color colour, float thickness) {
		super(colour, thickness);
		
		this.position = position;
		
		this.l = l;
	}

	/**
	 * @param l
	 * @param thickness
	 */
	public Arrow(Point2D position, double length, double headLength, float thickness) {
		super(thickness);
		
		this.l = l;
	}

	@Override
	public DisplayShape translate(double x, double y) {
		Point2D newPosition = new Point2D.Double(this.)
		
		return new Arrow(ShapeFunctions.translateShape(this.l, x, y), this.colour, this.thickness);
	}

	@Override
	public DisplayShape stretch(double xScale, double yScale) {
		return new Arrow(ShapeFunctions.stretchShape(this.l, xScale, yScale), this.colour, this.thickness);
	}
	
}
