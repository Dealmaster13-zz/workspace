package uk.ac.cam.oda22.graphics.shapes;

import java.awt.Color;
import java.awt.geom.Line2D;

import uk.ac.cam.oda22.core.ShapeFunctions;

/**
 * @author Oliver
 *
 */
public class Arrow extends DisplayShape {

	public final Line2D l;

	/**
	 * @param l
	 * @param colour
	 * @param thickness
	 */
	public Arrow(Line2D l, Color colour, float thickness) {
		super(colour, thickness);
		
		this.l = l;
	}

	/**
	 * @param l
	 * @param thickness
	 */
	public Arrow(Line2D l, float thickness) {
		super(thickness);
		
		this.l = l;
	}

	@Override
	public DisplayShape translate(double x, double y) {
		return new Arrow(ShapeFunctions.translateShape(this.l, x, y), this.colour, this.thickness);
	}

	@Override
	public DisplayShape stretch(double xScale, double yScale) {
		return new Arrow(ShapeFunctions.stretchShape(this.l, xScale, yScale), this.colour, this.thickness);
	}
	
}
