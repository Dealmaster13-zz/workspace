package uk.ac.cam.oda22.graphics;

import java.awt.Color;
import java.awt.geom.Line2D;
import java.awt.geom.Point2D;

/**
 * @author Oliver
 *
 */
public class GraphicsFunctions {

	public static Line[] getCross(Point2D centre, double radius, Color colour, float thickness) {
		Line2D l1 = new Line2D.Double(
				centre.getX() - radius,
				centre.getY() - radius,
				centre.getX() + radius,
				centre.getY() + radius);
		
		Line2D l2 = new Line2D.Double(
				centre.getX() - radius,
				centre.getY() + radius,
				centre.getX() + radius,
				centre.getY() - radius);

		Line[] lines = new Line[2];
		
		drawLine(new Line(l1, colour, thickness));
		drawLine(new Line(l2, colour, thickness));
	}
	
}
