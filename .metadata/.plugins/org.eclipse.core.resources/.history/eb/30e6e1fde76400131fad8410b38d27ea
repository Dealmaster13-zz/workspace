package uk.ac.cam.oda22.graphics;

import java.awt.Color;
import java.awt.geom.Line2D;

import uk.ac.cam.oda22.core.ShapeFunctions;

/**
 * @author Oliver
 *
 */
public class Line {

	public final Line2D l;
	
	public final Color colour;
	
	public final float thickness;

	/**
	 * @param l
	 * @param colour
	 * @param thickness
	 */
	public Line(Line2D l, Color colour, float thickness) {
		this.l = l;
		this.colour = colour;
		this.thickness = thickness;
	}
	
	public void translate(double x, double y) {
		this.l = ShapeFunctions.translateShape(this.l, x, y);
	}
	
	public void stretch(double xScale, double yScale) {
		
	}
	
}
