package uk.ac.cam.oda22.graphics;

import java.awt.Color;
import java.awt.geom.Line2D;
import java.awt.geom.Point2D;

/**
 * @author Oliver
 *
 */
public class GraphicsFunctions {

	public static Line[] getCross(Point2D centre, double radius, Color colour, float thickness) {
		Line2D l1 = new Line2D.Double(
				centre.getX() - radius,
				centre.getY() - radius,
				centre.getX() + radius,
				centre.getY() + radius);

		Line2D l2 = new Line2D.Double(
				centre.getX() - radius,
				centre.getY() + radius,
				centre.getX() + radius,
				centre.getY() - radius);

		Line[] lines = new Line[2];
		lines[0] = new Line(l1, colour, thickness);
		lines[1] = new Line(l2, colour, thickness);

		return lines;
	}

	public static Line2D translateShape(Line2D line, double x, double y) {
		return new Line2D.Double(
				line.getX1() + x,
				line.getY1() + y,
				line.getX2() + x,
				line.getY2() + y);
	}

}
